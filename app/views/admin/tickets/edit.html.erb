<% content_for :title do %>
  Edit Ticket
<% end %>

<% form_for [:admin, @ticket] do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p>
  <%= f.label :basic_state_event, "Basic state" %>
  <%= f.collection_select :basic_state_event, @ticket.basic_state_transitions, :event, :to_name, :include_blank => @ticket.basic_state_name.to_s %>
  <p>
  <%= render :partial => @ticket[:type].downcase + ".edit", :locals => { :f => f } unless @ticket[:type] == "Ticket" %>
  <p>
  <%= f.submit 'Update' %>
  </p>
<% end %>


