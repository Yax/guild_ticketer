<h1>New ticket</h1>

<% form_for(@ticket) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :category_id %><br />
  <%= f.select(:category_id, @categories.collect { |c| [ c.name, c.id ] }) %>
  </p>
  <p>
  <%= f.label :employee_name %><br />
  <%= f.text_field :employee_name %>
  </p>
  <p>
  <%= f.label :order_number %><br />
  <%= f.text_field :order_number %>
  </p>
  <p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tickets_path %>
