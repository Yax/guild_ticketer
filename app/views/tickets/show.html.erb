<p>
  <b>Kategoria:</b>
  <%=h @category.name %>
</p>

<p>
  <b>Pracownik:</b>
  <%=h @ticket.employee_name %>
</p>

<p>
  <b>Numer zlecenia:</b>
  <%=h @ticket.order_number %>
</p>

<p>
  <b>Email:</b>
  <%=h @ticket.email %>
</p>


<%= link_to 'Edytuj', edit_ticket_path(@ticket) %> |
<%= link_to 'Wróć', tickets_path %>


<h3>Wiadomości:</h3>
<table>
  <tr>
    <th>Od:</th>
    <th>Wiadomosc:</th>
  </tr>
  <% for message in @ticket.messages %>
    <tr>
      <td><%=h message.from %></td>
      <td><%=h truncate(message.content,79) %></td>
      <td><%= link_to 'Pokaz', message %></td>
      <td><%= link_to 'Edytuj', edit_message_path(message) %></td>
      <td><%= link_to 'Usun', message, :confirm => "Jestes pewny?", :method => :delete %></td>
    </tr>
  <% end %>
</table>
